<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wuxinaedu.weixin"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- sd卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 录音权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        name="com.wuxinaedu.weixin.activity.core.MyApplication"
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/android:Theme.Light.NoTitleBar" >
        <activity
            android:name="com.wuxinaedu.weixin.activity.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.wuxinaedu.weixin.activity.MainActivity" />
        <activity android:name="com.wuxinaedu.weixin.activity.LoginActivity" />
        <activity android:name="com.wuxinaedu.weixin.activity.SettingActivity" />
        <activity android:name="com.wuxinaedu.weixin.activity.FriendsActivity" />
        <activity android:name="com.wuxinaedu.weixin.activity.ImageDetailActivity" />
        <activity android:name="com.wuxinaedu.weixin.activity.DetailsActivity" />
        <activity android:name="com.wuxinaedu.weixin.activity.AddFriendsActivity" />
        <activity android:name="com.wuxinaedu.weixin.activity.GroupActivity" />
        <activity android:name="com.wuxinaedu.weixin.activity.ChatActivity" />
    </application>

</manifest>