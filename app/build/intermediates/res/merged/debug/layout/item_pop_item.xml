<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@null"
    android:orientation="horizontal" android:gravity="center_vertical" >
    <ImageView  android:id="@+id/image_id" android:layout_width="26dp"
        android:layout_height="26dp" android:layout_margin="7dp"
        android:src="@drawable/icon_menu_group" />
    <TextView  android:id="@+id/tv_id" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textColor="@color/white"
        android:text="@string/safety" />
</LinearLayout>
