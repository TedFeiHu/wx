<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView android:id="@+id/back_image_id"
        android:layout_width="match_parent" android:layout_height="160dp"
        android:src="@drawable/user_ba"  android:scaleType="centerCrop"/>
    
    <com.wuxinaedu.weixin.widget.RoundImageView  android:id="@+id/head_id"
        android:layout_width="60dp" android:layout_height="60dp" 
        android:src="@drawable/head" android:layout_marginRight="16dp"
        android:layout_alignParentRight="true" android:layout_below="@id/back_image_id"
        android:layout_marginTop="-30dp" android:layout_marginLeft="10dp"
        android:layout_marginBottom="4dp" />
    

    <TextView android:id="@+id/user_name"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:singleLine="true" android:text="@string/test"
        android:textColor="@color/white" android:textSize="19sp"
        android:layout_alignBottom="@id/back_image_id" android:layout_marginBottom="10dp"
        android:paddingLeft="50dp" android:layout_toLeftOf="@id/head_id"/>

</RelativeLayout>
