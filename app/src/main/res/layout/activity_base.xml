<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" android:background="@color/back">
    <ImageView android:id="@+id/left_iv_id" android:layout_width="50dp"
        android:layout_height="match_parent" android:src="@drawable/left"
        android:scaleType="centerInside" android:background="@drawable/title_press"
        android:clickable="true"/>
    <TextView android:id="@+id/title_tv_id" android:layout_width="wrap_content" 
        android:layout_height="wrap_content" android:text="@string/title" 
        android:textColor="@color/white" android:layout_centerInParent="true" 
        android:textSize="22sp"/>
	<ImageView android:id="@+id/right_iv_id" android:layout_width="50dp"
        android:layout_height="match_parent" android:src="@drawable/left"
        android:scaleType="centerInside" android:background="@drawable/title_press"
        android:clickable="true" android:layout_alignParentRight="true"
        android:visibility="gone"/>
	 <TextView android:id="@+id/right_tv_id" android:layout_width="60dp" 
        android:layout_height="match_parent" android:text="@string/title" 
        android:textColor="@color/white" android:layout_alignParentRight="true"
      	android:gravity="center" android:background="@drawable/title_press"
      	android:clickable="true" android:visibility="gone"/>
	
</RelativeLayout>
