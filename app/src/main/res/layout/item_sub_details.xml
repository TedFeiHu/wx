<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="15dp" android:background="@color/back_ground">
    
    <TextView android:id="@+id/sub_det_time" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="!!!!222222"
        android:textColor="@color/white" android:background="@drawable/time_back"
        android:textSize="12sp" android:padding="2dp"
        android:layout_centerHorizontal="true" />
	<LinearLayout android:id="@+id/sub_det_ll" android:layout_width="match_parent"
	    android:layout_height="wrap_content" android:background="@drawable/me_press_back"
	    android:layout_below="@id/sub_det_time" android:layout_marginTop="15dp"
	    android:orientation="vertical" android:clickable="true"
	    android:padding="20dp" android:layout_marginBottom="15dp">
	    <TextView android:id="@+id/sub_name" android:layout_width="match_parent"
	        android:layout_height="wrap_content" android:text="名字"
	        android:textColor="@color/black" android:layout_marginTop="4dp" 
	        android:textSize="16sp" android:singleLine="true"
	        android:ellipsize="end"/>
	    <TextView android:id="@+id/sub_time" android:layout_width="match_parent"
	        android:layout_height="wrap_content" android:text="名字"
	        android:textSize="12sp" android:layout_marginTop="4dp" />
	    <ImageView android:id="@+id/user_ba" android:layout_width="match_parent"
	        android:layout_height="200dp" android:src="@drawable/user_ba"
	        android:scaleType="centerCrop" 	android:layout_marginTop="8dp"	/>
	    <TextView android:id="@+id/sub_content" android:layout_width="match_parent"
	        android:layout_height="wrap_content" android:text="名字"
	        android:textSize="14sp" android:ellipsize="end"
	        android:layout_marginTop="8dp" android:singleLine="true" />
	    
	    <View android:id="@+id/loin1" android:layout_width="match_parent"
	        android:layout_height="0.5dp" android:background="@color/line"
	        android:layout_marginTop="4dp" android:layout_marginBottom="4dp" />
	    <RelativeLayout  android:id="@+id/sub_ll" android:layout_width="match_parent"
	        android:layout_height="wrap_content" android:layout_marginTop="10dp">
		    <TextView android:id="@+id/sub_all" android:layout_width="match_parent"
		        android:layout_height="wrap_content" android:text="阅读全文"
		        android:textColor="@color/black" android:layout_marginTop="4dp"
		        android:gravity="clip_vertical" android:textSize="14sp"/>
		    <ImageView android:id="@+id/sub_all_im" style="@style/im_rigent_sty"
		        android:src="@drawable/right" android:layout_alignParentRight="true" />
	    </RelativeLayout>
	    
	</LinearLayout>
</RelativeLayout>
