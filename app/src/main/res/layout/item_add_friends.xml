<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:descendantFocusability="blocksDescendants">
    <RelativeLayout android:id="@+id/rl_id" android:layout_width="match_parent"
        android:layout_height="58dp" android:background="@drawable/me_press_back"
        android:paddingLeft="4dp">
        <com.wuxinaedu.weixin.widget.RoundImageView android:id="@+id/head_id"
            android:layout_width="48dp" android:layout_height="48dp"
            android:layout_margin="6dp" android:src="@drawable/head_nor"/>
        <TextView android:id="@+id/name_id" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wx_name"  android:textSize="16sp"
            android:layout_centerVertical="true" android:layout_toRightOf="@id/head_id"/>
        <Button android:id="@+id/isadd_id" android:layout_width="50dp"
            android:layout_height="30dp" android:background="@drawable/logon_btn"
            android:layout_alignParentRight="true" android:layout_centerVertical="true"
            android:layout_marginRight="10dp" android:text="@string/receive"
            android:textColor="@color/white" android:textSize="12sp"/>
    </RelativeLayout>

</RelativeLayout>
