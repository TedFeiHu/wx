<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

     <!-- 登录界面文字 -->
    <style name="login_tv">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- me界面-->
    <style name="rl_sty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:background">@drawable/me_press_back</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="im_sty">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="tv_sty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/trans</item>
        <item name="android:paddingLeft">48dp</item>
    </style>
    
    <style name="im_rigent_sty">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    
    <!-- radiobutton 的样式 -->
    <style name="ra_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">4dp</item> 
        <item name="android:paddingBottom">4dp</item> 
        <item name="android:background">@color/white</item>
        <item name="android:textSize">12sp</item> 
        <item name="android:textColor">@drawable/main_bottom_tv_selector</item>
 	</style>
 	
    <style name="popwin_anim_style">  
     <item name="android:windowEnterAnimation">@anim/head_in</item>  
     <item name="android:windowExitAnimation">@anim/head_out</item>  
	</style>
	
   <!--联系人  头部 -->
    <style name="contacts_im">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">6dp</item>
    </style>
    <style name="contacts_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/me_press_back</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">60dp</item>
        <item name="android:layout_margin">0.3dp</item>
    </style>
    
    <style name="my_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
	  	<item name="android:button">@drawable/checkbox_style</item>
	  	<item name="android:maxHeight">58dp</item>
  	</style>
    <!-- 用户详细信息界面 -->
 	<style name="info_tv">
        <item name="android:layout_width">94dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:background">@color/white</item>
    </style>
 	<style name="info_id_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@color/white</item>
    </style>
    
    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">@color/line</item>
    </style>
    <style name="line11">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">@color/line_11</item>
    </style>
    <style name="line1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">@color/line_11</item>
    </style>
    
</resources>
